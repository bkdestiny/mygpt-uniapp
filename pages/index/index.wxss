/**index.wxss**/
page{
  background: #ccc;
}
.container{
  margin: 0 30rpx;
}
.input{
  position: fixed;
  bottom: 0;
  background: #fff;
  width: 100%;
  height: 50px;
}
.input .content{
  height: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 30rpx;
}
.input .content input{
  width:80%;
}
.input .content view{
  font-size: 14px;
}
.container .list .item{
  display: flex;
  align-items: center;
}
.list{
  padding-top: 26rpx;
  position: relative;
}
.list .item{
  padding-bottom: 30rpx;
}
.list .item-user{
  float: right;
}
.list .item-system image{
  width: 90rpx;
  height: 90rpx;
  border-radius: 50px;
  margin-right: 30rpx;
  position: relative;
  left: 20rpx;
}
.list .item-user image{
  width: 90rpx;
  height: 90rpx;
  border-radius: 50px;
  margin-left: 30rpx;
  position: relative;
  right: 20rpx;
}
.list .item-system view{
  background: #fff;
  padding: 25rpx 40rpx;
  border-radius: 20rpx;
  position: relative;
  left: 15rpx;
}
.list .item-user view{
  background: #fff;
  padding: 25rpx 40rpx;
  border-radius: 20rpx;
  position: relative;
  right:15rpx;
}
